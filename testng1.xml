<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<!--suite name="MultiBrowserSuite" verbose="2" parallel="tests"-->
<suite name="MultiBrowserSuite" verbose="2">
  <listeners>
	  <!--listener class-name="org.uncommons.reportng.HTMLReporter"/>
	  <listener class-name="org.uncommons.reportng.JUnitXMLReporter"/-->
  </listeners>
  <!--Filtering using facets on the Product List-->
  <test name="Product List Filte1r">
	<parameter name="browser" value="Android">
	</parameter>
    <classes>
       <class name="com.totalwine.test.mobile.MobileStoreLocator"/>
    </classes>
  </test>
  <test name="2">
	<parameter name="browser" value="iOS">
	</parameter>
    <classes>
       <class name="com.totalwine.test.mobile.MobileHomePage"/>
    </classes>
  </test>
  <test name="3">
	<parameter name="browser" value="FF">
	</parameter>
    <classes>
       <class name="com.totalwine.test.global.BrowseOnly"/>
    </classes>
  </test>
  <test name="4">
	<parameter name="browser" value="Chrome">
	</parameter>
    <classes>
       <class name="com.totalwine.test.global.BrowseOnly"/>
    </classes>
  </test>
  <test name="5">
	<parameter name="browser" value="IE">
	</parameter>
    <classes>
       <class name="com.totalwine.test.global.BrowseOnly"/>
    </classes>
  </test>
 </suite>